.login-logo
  img src="<%= asset_path('unicorn-icon-nav.png') %>"
.login-box ng-controller="ContactCtrl"
  .login-box-title.teal
    span Contact Us
  .login-box-content
    flash-messages
    form.login-form name="contact-form" ng-submit="submit()"
      input name="name" autocomplete="off" autofocus="" spellcheck="false" placeholder="Your name" type="name" ng-model="name" ng-required="true" ng-hide="pendingCaptcha || contactSucceeded"
      input name="email" autocomplete="off" spellcheck="false" placeholder="Your email address" type="email" ng-model="email" ng-required="true" ng-hide="pendingCaptcha || contactSucceeded"
      input name="phone" autocomplete="off" spellcheck="false" placeholder="Your phone number" type="tel" ng-model="phone" ng-hide="pendingCaptcha || contactSucceeded"
      input name="subject" autocomplete="off" spellcheck="false" placeholder="Subject" type="text" ng-model="subject" ng-required="true" ng-hide="pendingCaptcha || contactSucceeded"
      textarea.form-control name="message" ng-model="message" ng-required="true" ng-hide="pendingCaptcha || contactSucceeded"
      span.help-block ng-hide="pendingCaptcha || contactSucceeded" What's on your mind?
      .row
        captcha-input ng-hide="contactSucceeded"
      input#submit name="submit" type="submit" value="Submit" ng-disabled="showActivity" ng-hide="pendingCaptcha || contactSucceeded"
    spinner
