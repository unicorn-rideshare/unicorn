.login-logo
  img src="<%= asset_path('unicorn-icon-nav.png') %>"
.login-box ng-controller="ResetPasswordCtrl"
  .login-box-title.teal
    span Reset Password
  .login-box-content ng-show="reset_password_token == null"
    flash-messages
    form.login-form novalidate="true" name="login-form" ng-submit="resetPassword()"
      input name="email" autocomplete="off" autofocus="" spellcheck="false" placeholder="Your email address" type="email" ng-model="email"
      input#submit name="submit" type="submit" value="Reset Password" ng-disabled="showActivity"
    spinner
    .half
      a href="#/login" Cancel
  .login-box-content ng-show="reset_password_token != null"
    flash-messages
    form.login-form novalidate="true" name="login-form" ng-submit="resetPassword()"
      input name="email" autocomplete="off" autofocus="" spellcheck="false" placeholder="Your email address" type="email" ng-model="email"
      input name="password" autocomplete="off" spellcheck="false" placeholder="Your new password" type="password" ng-model="password"
      input name="reset_password_token" type="hidden" ng-model="reset_password_token"
      input#submit name="submit" type="submit" value="Reset Password" ng-disabled="showActivity"
    spinner
    .half
      a href="#/login" Cancel
