.login-logo
  img src="<%= asset_path('unicorn-icon-nav.png') %>"
.login-box ng-controller="AcceptInvitationCtrl"
  .login-box-title.teal
    span Accept Invitation
  .login-box-content
    flash-messages
    form.login-form novalidate="true" name="login-form" ng-submit="acceptInvitation()"
      input name="name" autocomplete="off" autofocus="" spellcheck="false" placeholder="Your name" type="text" ng-model="name"
      input name="email" autocomplete="off" spellcheck="false" placeholder="Your email address" type="email" ng-model="email"
      input name="password" autocomplete="off" spellcheck="false" placeholder="Create your password" type="password" ng-model="password"
      input name="invitation_token" type="hidden" ng-model="invitation_token"
      input#submit name="submit" type="submit" value="Accept Invitation" ng-disabled="showActivity"
    spinner
    .half
      a href="#/login" Cancel
