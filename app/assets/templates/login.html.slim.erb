.login-logo
  img src="<%= asset_path('unicorn-icon-nav.png') %>"
.login-box ng-controller="LoginCtrl"
  .login-box-title.teal
    span Login
  .login-box-content
    flash-messages
    form.login-form novalidate="true" name="login-form" ng-submit="login()"
      input name="username" autocomplete="off" autofocus="" spellcheck="false" placeholder="Your email address" type="email" ng-model="email"
      input name="password" autocomplete="off" spellcheck="false" placeholder="Your password" type="password" ng-model="password"
      input#submit name="submit" type="submit" value="Sign in" ng-disabled="showActivity"
    spinner
    .half
      a href="#/reset-password" Forgot your password?
