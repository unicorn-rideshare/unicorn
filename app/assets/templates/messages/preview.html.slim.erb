li.message
  span.photo
    img ng-src="{{ message.sender_profile_image_url || '<%= asset_path('profile-photo.png') %>' }}"
  a.conversation-anchor ng-href="" ng-click="openConversation(message, $event)" message-id="{{ message.id }}"
    span.subject
      span.from
        | {{ message.sender_name }}
      span.time
        | {{ message.created_at | date: 'EEE. M/dd, h:mm a' }}
    span.message
      | {{ message.preview }}
