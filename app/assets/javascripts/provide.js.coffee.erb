angular.module('unicornApp',
  ['ngRoute', 'angularPayments', 'jsonFormatter', 'mgo-angular-wizard', 'unicornApp.services', 'unicornApp.controllers', 'unicornApp.directives', 'ui.bootstrap', 'ui.bootstrap.datetimepicker', 'ui.provide', 'ui.sortable'])

.config(['$routeProvider',
  ($routeProvider) ->

    # dashboard
    $routeProvider.when '/dashboard', templateUrl: '<%= asset_path('dashboard.html') %>'

    # map
    $routeProvider.when '/map', templateUrl: '<%= asset_path('map.html') %>'

    # products
    $routeProvider.when '/products', templateUrl: '<%= asset_path('products.html') %>'
    $routeProvider.when '/products/new', templateUrl: '<%= asset_path('products/new.html') %>'
    $routeProvider.when '/products/:id/edit', templateUrl: '<%= asset_path('products/edit.html') %>'
    $routeProvider.when '/products/:id/variant', templateUrl: '<%= asset_path('products/new_variant.html') %>'

    # categories
    $routeProvider.when '/categories', templateUrl: '<%= asset_path('categories.html') %>'
    $routeProvider.when '/categories/new', templateUrl: '<%= asset_path('categories/new.html') %>'
    $routeProvider.when '/categories/:id/edit', templateUrl: '<%= asset_path('categories/edit.html') %>'

    # customers
    $routeProvider.when '/customers', templateUrl: '<%= asset_path('customers.html') %>'
    $routeProvider.when '/customers/new', templateUrl: '<%= asset_path('customers/new.html') %>'
    $routeProvider.when '/customers/:id/edit', templateUrl: '<%= asset_path('customers/edit.html') %>'

    # markets
    $routeProvider.when '/markets', templateUrl: '<%= asset_path('markets.html') %>'
    $routeProvider.when '/markets/new', templateUrl: '<%= asset_path('markets/new.html') %>'
    $routeProvider.when '/markets/:id/edit', templateUrl: '<%= asset_path('markets/edit.html') %>'

    # origins
    $routeProvider.when '/markets/:market_id/origins', templateUrl: '<%= asset_path('origins.html') %>'
    $routeProvider.when '/markets/:market_id/origins/new', templateUrl: '<%= asset_path('origins/new.html') %>'
    $routeProvider.when '/markets/:market_id/origins/:id/edit', templateUrl: '<%= asset_path('origins/edit.html') %>'

    # messages
    $routeProvider.when '/messages', templateUrl: '<%= asset_path('messages.html') %>'
    $routeProvider.when '/messages/:id', templateUrl: '<%= asset_path('messages/show.html') %>'

    # dispatchers
    $routeProvider.when '/dispatchers', templateUrl: '<%= asset_path('dispatchers.html') %>'
    $routeProvider.when '/dispatchers/new', templateUrl: '<%= asset_path('dispatchers/new.html') %>'
    $routeProvider.when '/dispatchers/:id/edit', templateUrl: '<%= asset_path('dispatchers/edit.html') %>'

    # dispatcher origin assignments
    $routeProvider.when '/markets/:market_id/origins/:origin_id/dispatcher_origin_assignments', templateUrl: '<%= asset_path('dispatcher_origin_assignments.html') %>'
    $routeProvider.when '/markets/:market_id/origins/:origin_id/dispatcher_origin_assignments/new', templateUrl: '<%= asset_path('dispatcher_origin_assignments/new.html') %>'
    $routeProvider.when '/markets/:market_id/origins/:origin_id/dispatcher_origin_assignments/:id/edit', templateUrl: '<%= asset_path('dispatcher_origin_assignments/edit.html') %>'

    # providers
    $routeProvider.when '/providers', templateUrl: '<%= asset_path('providers.html') %>'
    $routeProvider.when '/providers/new', templateUrl: '<%= asset_path('providers/new.html') %>'
    $routeProvider.when '/providers/:id/edit', templateUrl: '<%= asset_path('providers/edit.html') %>'

    # provider origin assignments
    $routeProvider.when '/markets/:market_id/origins/:origin_id/provider_origin_assignments', templateUrl: '<%= asset_path('provider_origin_assignments.html') %>'
    $routeProvider.when '/markets/:market_id/origins/:origin_id/provider_origin_assignments/new', templateUrl: '<%= asset_path('provider_origin_assignments/new.html') %>'
    $routeProvider.when '/markets/:market_id/origins/:origin_id/provider_origin_assignments/:id/edit', templateUrl: '<%= asset_path('provider_origin_assignments/edit.html') %>'

    # routes
    $routeProvider.when '/routes', templateUrl: '<%= asset_path('routes.html') %>'
    $routeProvider.when '/routes/new', templateUrl: '<%= asset_path('routes/new.html') %>'
    $routeProvider.when '/routes/:id', templateUrl: '<%= asset_path('routes/show.html') %>'
    $routeProvider.when '/routes/:id/edit', templateUrl: '<%= asset_path('routes/edit.html') %>'
    $routeProvider.when '/routes/:id/work_orders/new', templateUrl: '<%= asset_path('work_orders/new.html') %>'

    # work orders
    $routeProvider.when '/work_orders', templateUrl: '<%= asset_path('work_orders.html') %>'
    $routeProvider.when '/work_orders/new', templateUrl: '<%= asset_path('work_orders/new.html') %>'
    $routeProvider.when '/work_orders/:id/edit', templateUrl: '<%= asset_path('work_orders/edit.html') %>'
    $routeProvider.when '/work_orders/:id', templateUrl: '<%= asset_path('work_orders/show.html') %>'

    # jobs
    $routeProvider.when '/jobs', templateUrl: '<%= asset_path('jobs.html') %>'
    $routeProvider.when '/jobs/dashboard', templateUrl: '<%= asset_path('jobs/dashboard.html') %>'
    $routeProvider.when '/jobs/new', templateUrl: '<%= asset_path('jobs/new.html') %>'
    $routeProvider.when '/jobs/:id/edit', templateUrl: '<%= asset_path('jobs/edit.html') %>'
    $routeProvider.when '/jobs/:id/work_orders/new', templateUrl: '<%= asset_path('work_orders/new.html') %>'

    # default
    $routeProvider.otherwise redirectTo: '/dashboard'
])
